{
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "sourceMap": true,
        "module": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["src/*"],
            "*": ["node_modules/@types/*", "src/types/*"]
        }
    }
}
